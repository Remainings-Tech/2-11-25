#include <iostream>
using namespace std;

int main() {
    int num1, num2;

    cout << "enter the 2 numbers  ";
    cin >> num1 >> num2;

    if (num2 == 0) {
        cout << "division of " << num1 << " by " << num2 << ": nope!" << endl;
    }
    else {
        float num3 = num1 / num2;
        cout << "division of " << num1 << " by "<<num2<< ": ";

    }

    if (num1 < num2) {
        cout << "in order: " << num1 << " " << num2 << endl;
    }
    else {
        cout << "in order: " << num2 << " " << num1 << endl;
    }

    if (num1 == 13 || num2 == 13) {
        cout << "bad luck!" << endl;
    }

    cout << "odd: ";
    if (num1 % 2 != 0) {
        cout << num1;
    }
    if (num2 % 2 != 0) {
        cout << num2;
    }
    cout << endl;

    return 0;
}
